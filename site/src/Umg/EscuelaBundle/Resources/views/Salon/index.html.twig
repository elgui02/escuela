{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Salon list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Aula</th>
                <th>Personal_id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('salon_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.Nombre }}</td>
                <td>{{ entity.Aula }}</td>
                <td>{{ entity.Personalid }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('salon_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('salon_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('salon_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
