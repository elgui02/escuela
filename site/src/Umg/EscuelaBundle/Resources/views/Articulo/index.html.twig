{% extends '::base.html.twig' %}

{% block body -%}
    <h2 class="clr-6 p4">Lista de Articulos</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Activo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('articulo_show', { 'id': entity.id }) }}">{{ entity.Nombre }}</a></td>
                <td>{{ entity.Activo }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('articulo_show', { 'id': entity.id }) }}">Ver</a>
                    </li>
                    <li>
                        <a href="{{ path('articulo_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('articulo_new') }}" class="link-2">
                Nueva Fuente
            </a>
        </li>
    </ul>
    {% endblock %}
