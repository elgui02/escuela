{% extends '::base.html.twig' %}

{% block body -%}
    <h2 class="clr-6 p4" >Listado del personal</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Documento</th>
                <th>Usuario</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('personal_show', { 'id': entity.id }) }}">{{ entity.Nombre }}</a></td>
                <td>{{ entity.Documento }}</td>
                <td>{{ entity.Usuario.UserName }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('personal_show', { 'id': entity.id }) }}">ver</a>
                    </li>
                    <li>
                        <a href="{{ path('personal_edit', { 'id': entity.id }) }}">editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('personal_new') }}" class="link-2">
                Agregar personal
            </a>
        </li>
    </ul>
    {% endblock %}
