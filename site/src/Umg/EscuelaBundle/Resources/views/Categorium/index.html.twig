{% extends '::base.html.twig' %}

{% block body -%}
    <h2 class="clr-6 p4" >Lista de categorias</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Actiones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('categoria_show', { 'id': entity.id }) }}">{{ entity.Nombre }}</a></td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('categoria_show', { 'id': entity.id }) }}">ver</a>
                    </li>
                    <li>
                        <a href="{{ path('categoria_edit', { 'id': entity.id }) }}">editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('categoria_new') }}" class="link-2">
                Nueva categoria
            </a>
        </li>
    </ul>
    {% endblock %}
